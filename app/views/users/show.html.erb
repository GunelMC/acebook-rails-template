<% provide(:title, @user.username) %> 
<div class="row">
  <aside class="col-md-4"> 
    <section class="user_info">
      <h1>
        <% if @user.avatar.attached? %>
          <%= image_tag @user.avatar %>
        <% else %>
          <%= gravatar_for @user %>
        <% end %>
        <%= @user.username %>
      </h1> 
    </section>
      <%= link_to 'Edit', edit_user_path(@user) %>
  </aside>
</div>
