<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <h1 style="text-align:center">Edit</h1>
        <%= form_for @user do |form| %>
            <%= form.label :new_username %>
            <%= form.text_field :username, class: 'form-control' %>
            <% @user.errors.full_messages_for(:username).each do |message| %>
                <span style="color:red;"><%= "#{message}." %></span>
            <% end %>
            
            <%= form.label "Profile Photo" %>
            <%= image_tag(@user.avatar, width: 80) if @user.avatar.attached? %>
            <%= form.file_field :avatar %>

            <%= form.label :new_email %>
            <%= form.email_field :email, class: 'form-control' %>
            <% @user.errors.full_messages_for(:email).each do |message| %>
                <span style="color:red;"><%= "#{message}." %></span>
            <% end %>

            <%= form.label :new_password %>
            <%= form.password_field :password, class: 'form-control' %>
            <% @user.errors.full_messages_for(:password).each do |message| %>
                <span style="color:red;"><%= "#{message}." %></span><br>
            <% end %>

            <%= form.label :password_confirmation %>
            <%= form.password_field :password_confirmation, class: 'form-control' %>
            <% @user.errors.full_messages_for(:password).each do |message| %>
                <span style="color:red;"><%= "#{message}." %></span>
            <% end %>
            
            <% @user.errors.full_messages_for(:password_confirmation).each do |message| %>
                <span style="color:red;"><%= "#{message}." %></span>
            <% end %><br>

            <%= form.label :hobbies %>
            <%= form.text_field :hobbies, class: 'form-control' %>
            <%= form.label :marital_status %>
            <%= form.text_field :marital_status, class: 'form-control' %>
            <%= form.label :birthday %>
            <%= form.text_field :birthday, class: 'form-control' %>
            <%= form.submit "Update", class: "btn btn-primary" %>
        <% end %>
    </div>
</div>


