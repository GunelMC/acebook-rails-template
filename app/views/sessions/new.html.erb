<% provide(:title, "Log in") %>
<div>

  <div class="container d-flex align-items-center ">
    <div class="col-lg-6 login-img">
      <%= image_tag "m-up1.jpg" %>
    </div>
    <div class="col-lg-6 input-form">
      <h1 style="text-align:center">Log in</h1>
      <%= form_with(url: login_path, scope: :session, local: true) do |f| %> <%= f.label :email %><br>
      <%= f.email_field :email, class: 'form-control' %> <%= f.label :password %><br>
      <%= f.password_field :password, class: 'form-control' %><br>
      <%= f.submit "Log in", class: "btn btn-primary" %>
      <% end %>
      <% flash.each do |type, msg| %>
      <div style="color:red">
        <%= "#{msg}." %>
      </div>
      <% end %>
      <p>New user? <%= link_to "Sign up now!", new_user_url %></p>
    </div>
  </div>
</div>